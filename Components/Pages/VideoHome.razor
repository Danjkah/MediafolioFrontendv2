@page "/videoHome"
@using MediafolioFrontend.Models
@using MediafolioFrontend.Services
@using MediafolioFrontend.Enums

@inject IVideoService videoService
@inject NavigationManager Navigation

<PageTitle>Your Video Entries</PageTitle>

<div class="container mt-4">
    <h2>Your Video Entries</h2>












    @if (isLoading == true)
    {
        <div class="text-center my-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-3">Searching for movies...</p>
        </div>
    }

    @if (hasSearched && !isLoading && !videos.Any() && string.IsNullOrEmpty(errorMessage))
    {
        <div class= "alert alert-info">
            No videos were found. Try reloading the page or make your first entry!
        </div>
    }

    @if(isLoading == false)
    {
        <div class="row row-cols-1 row-cols-md-3 row-cols-lg-3 g-3">
            @foreach(var video in videos)
            {
                <div class = "col">
                    <div class="card h-100 movie-card">

                        <div class = "no-poster">
                            <span>üìΩÔ∏è</span>
                        </div>

                        <div class = "card-body">
                            <h6 class="card-title">@video.Title</h6>
                            <p class="card-text">
                                <small>Created at: @video.CreatedAt</small><br />
                                @if (video.UpdatedAt != DateTime.MinValue)
                                {
                                    <small>Updated at: @video.UpdatedAt</small> <br/>
                                }

                                <small>Tags: @foreach(var tag in video.Tags)
                                    {
                                        <small>@tag @(" ")  </small>
                                    }
                                </small> <br/>

                            </p>
                        </div>
                    </div>
                
                
                </div>
            }


        </div>
    }





</div>




@code {
    private List<Video> videos = new List<Video>();
    private bool isLoading = false;

    private string? errorMessage = null;

    private bool hasSearched = false; 

    private async Task GetVideoEntries()
    {
        try
        {

            isLoading = true;
            errorMessage = null;
            hasSearched = true; 

            var loadResults = await videoService.GetAllVideosAsync();

            videos = loadResults;

        }
        catch (Exception ex)
        {
            errorMessage = ex.Message;
        }
        finally
        {
            isLoading = false;
        }

    }
    //https://stackoverflow.com/questions/61551404/in-blazor-how-to-call-a-function-at-page-load-event-name
    protected override async Task OnInitializedAsync()
    {
       await GetVideoEntries();
    }
}